<!DOCTYPE html>
<html>
  <head>
    <title>PropertyFinder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

    <%= favicon_link_tag asset_path('favicon-16x16.png') %>

    <script src="https://unpkg.com/feather-icons"></script>

  </head>

  <body id="<%= controller.controller_name %>" class="<%= controller.action_name %> <%= "show_sidebar" if @show_sidebar.present? %>">
    <% if @show_sidebar.nil? %>
      <header>
        <%= render 'layouts/nav/public' %>
        <%= yield %>
      </header>
    <% else %>
      <%= render 'layouts/nav/dashboard' %>

      <div class="container-fluid">
        <div class="row">
          <%= render 'layouts/nav/sidebar' %>
          <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 mt-5">
            <%= yield %>
          </main>
        </div>
      </div>
    <% end %>

    <%#= render 'layouts/footer' %>

    <div id="notifications"><%= flash_notifications %></div>

  </body>
</html>
